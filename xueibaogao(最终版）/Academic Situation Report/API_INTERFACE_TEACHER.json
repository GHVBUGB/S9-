          },
          "name": {
            "type": "string",
            "required": true,
            "description": "学生姓名",
            "example": "李明"
          },
          "level": {
            "type": "string",
            "required": false,
            "description": "学习等级",
            "example": "S9 进阶阅读计划"
          }
        }
      },
      "latestLesson": {
        "type": "object",
        "required": true,
        "description": "最新课程记录",
        "fields": "参考lessonRecord字段定义"
      },
      "historyLessons": {
        "type": "array",
        "required": true,
        "description": "历史课程记录列表",
        "items": {
          "type": "object",
          "fields": "参考lessonRecord字段定义"
        }
      }
    }
  },
