{
  "description": "教师端数据接口字段定义 - LessonRecord完整JSON格式",
  "version": "1.0",
  "lessonRecord": {
    "description": "课程记录数据结构（教师端编辑和存储）",
    "fields": {
      "id": {
        "type": "string",
        "required": true,
        "description": "课程ID",
        "example": "lesson-1001-001"
      },
      "date": {
        "type": "string",
        "required": true,
        "description": "日期",
        "example": "2023.10.24",
        "format": "YYYY.MM.DD"
      },
      "title": {
        "type": "string",
        "required": true,
        "description": "课程标题",
        "example": "苏珊和她的猫"
      },
      "unit": {
        "type": "string",
        "required": true,
        "description": "单元",
        "example": "Unit 1: My Pet"
      },
      "articlesCount": {
        "type": "number",
        "required": true,
        "description": "阅读篇数",
        "example": 2
      },
      "wordsRead": {
        "type": "number",
        "required": true,
        "description": "阅读字数",
        "example": 450
      },
      "focusDuration": {
        "type": "number",
        "required": true,
        "description": "专注时长（分钟）",
        "example": 18
      },
      "accuracy": {
        "type": "number",
        "required": true,
        "description": "正确率（百分比）",
        "example": 85,
        "min": 0,
        "max": 100
      },
      "abilityScores": {
        "type": "object",
        "required": true,
        "description": "能力分数",
        "fields": {
          "precisePositioning": {
            "type": "number",
            "required": true,
            "description": "精准定位分数",
            "example": 85,
            "min": 0,
            "max": 100
          },
          "logicalDeduction": {
            "type": "number",
            "required": true,
            "description": "逻辑推演分数",
            "example": 70,
            "min": 0,
            "max": 100
          },
          "macroStructure": {
            "type": "number",
            "required": true,
            "description": "宏观结构分数",
            "example": 60,
            "min": 0,
            "max": 100
          },
          "contextualDecoding": {
            "type": "number",
            "required": true,
            "description": "语境解码分数",
            "example": 90,
            "min": 0,
            "max": 100
          },
          "strategyExecution": {
            "type": "number",
            "required": true,
            "description": "策略执行分数",
            "example": 75,
            "min": 0,
            "max": 100
          }
        }
      },
      "subjectPassport": {
        "type": "object",
        "required": false,
        "description": "主题护照数据",
        "fields": {
          "coverImage": {
            "type": "string",
            "required": false,
            "description": "封面图片URL",
            "example": "https://picsum.photos/600/340"
          },
          "articleTitle": {
            "type": "string",
            "required": true,
            "description": "文章标题",
            "example": "Susan and Her Cat"
          },
          "unitProgress": {
            "type": "string",
            "required": true,
            "description": "单元进度",
            "example": "1/4"
          },
          "unitTotal": {
            "type": "number",
            "required": true,
            "description": "单元总数",
            "example": 4
          },
          "theme": {
            "type": "string",
            "required": true,
            "description": "主题",
            "example": "人与自然"
          },
          "genre": {
            "type": "string",
            "required": true,
            "description": "体裁",
            "example": "记叙文"
          }
        }
      },
      "skillCards": {
        "type": "array",
        "required": false,
        "description": "技能卡列表",
        "items": {
          "type": "object",
          "fields": {
            "title": {
              "type": "string",
              "required": true,
              "example": "GPS定位卡"
            },
            "level": {
              "type": "string",
              "required": true,
              "example": "LV.3"
            },
            "progress": {
              "type": "number",
              "required": true,
              "example": 65
            },
            "total": {
              "type": "number",
              "required": true,
              "example": 100
            },
            "status": {
              "type": "string",
              "required": true,
              "enum": ["active", "locked"],
              "example": "active"
            },
            "desc": {
              "type": "string",
              "required": true,
              "example": "精准定位"
            },
            "fullDesc": {
              "type": "string",
              "required": false,
              "example": "GPS定位卡帮助你快速定位文章中的关键细节信息，精准找到答案所在位置。"
            },
            "questionTypes": {
              "type": "array",
              "required": false,
              "items": {
                "type": "string"
              },
              "example": ["细节理解题", "信息定位题", "事实查找题"]
            },
            "tips": {
              "type": "string",
              "required": false,
              "example": "阅读题目后，先在脑海中标记关键词，然后在文章中快速扫描定位。"
            },
            "stats": {
              "type": "object",
              "required": false,
              "fields": {
                "level": {
                  "type": "number",
                  "required": true,
                  "example": 3
                },
                "exp": {
                  "type": "number",
                  "required": true,
                  "example": 650
                },
                "usage": {
                  "type": "number",
                  "required": true,
                  "example": 12
                }
              }
            },
            "unlockCondition": {
              "type": "string",
              "required": false,
              "example": "完成更多相关题型训练即可解锁此技能卡"
            }
          }
        }
      },
      "vocabulary": {
        "type": "array",
        "required": false,
        "description": "生词列表",
        "items": {
          "type": "object",
          "fields": {
            "word": {
              "type": "string",
              "required": true,
              "example": "scarf"
            },
            "partOfSpeech": {
              "type": "string",
              "required": true,
              "example": "n. 围巾"
            },
            "meaning": {
              "type": "string",
              "required": true,
              "example": "围巾"
            },
            "status": {
              "type": "string",
              "required": true,
              "enum": ["mastered", "review"],
              "example": "mastered"
            },
            "context": {
              "type": "string",
              "required": true,
              "example": "Susan bought a red scarf at the store."
            },
            "sourceTitle": {
              "type": "string",
              "required": false,
              "example": "The Fashion Story"
            },
            "reviewCount": {
              "type": "number",
              "required": false,
              "example": 2
            }
          }
        }
      },
      "sentences": {
        "type": "array",
        "required": false,
        "description": "难句列表",
        "items": {
          "type": "object",
          "fields": {
            "text": {
              "type": "string",
              "required": true,
              "example": "The rapid transition to renewable energy sources is not just an environmental necessity but an economic opportunity that could reshape global markets."
            },
            "difficulty": {
              "type": "string",
              "required": true,
              "enum": ["easy", "medium", "hard"],
              "example": "hard"
            },
            "translation": {
              "type": "string",
              "required": true,
              "example": "向可再生能源的快速转型不仅是环境必需，也是一个可能重塑全球市场的经济机遇。"
            },
            "analysis": {
              "type": "string",
              "required": true,
              "example": "这是一个并列结构的复杂句。主句由\"not just...but...\"连接两个并列成分。"
            },
            "keyPoints": {
              "type": "array",
              "required": true,
              "items": {
                "type": "string"
              },
              "example": ["not just...but... 并列结构", "定语从句修饰 opportunity"]
            },
            "sourceTitle": {
              "type": "string",
              "required": false,
              "example": "Green Energy Future"
            }
          }
        }
      },
      "trends": {
        "type": "object",
        "required": false,
        "description": "趋势数据",
        "fields": {
          "guessRate": {
            "type": "object",
            "required": true,
            "description": "盲猜率趋势",
            "fields": {
              "current": {
                "type": "number",
                "required": true,
                "description": "当前盲猜率（百分比）",
                "example": 5
              },
              "change": {
                "type": "number",
                "required": true,
                "description": "变化率（百分比）",
                "example": -58.3
              },
              "data": {
                "type": "array",
                "required": true,
                "description": "每日数据",
                "items": {
                  "type": "object",
                  "fields": {
                    "day": {
                      "type": "string",
                      "required": true,
                      "example": "周二"
                    },
                    "value": {
                      "type": "number",
                      "required": true,
                      "example": 40
                    }
                  }
                }
              }
            }
          }
        }
      },
      "periodComparison": {
        "type": "object",
        "required": false,
        "description": "周期对比数据",
        "fields": {
          "week": {
            "type": "array",
            "required": true,
            "description": "本周与上周对比",
            "items": {
              "type": "object",
              "fields": {
                "label": {
                  "type": "string",
                  "required": true,
                  "example": "阅读篇数"
                },
                "value": {
                  "type": "string|number",
                  "required": true,
                  "example": 14
                },
                "unit": {
                  "type": "string",
                  "required": true,
                  "example": "篇"
                },
                "change": {
                  "type": "number",
                  "required": true,
                  "example": 40.0
                },
                "prevValue": {
                  "type": "string|number",
                  "required": true,
                  "example": 10
                },
                "diff": {
                  "type": "number",
                  "required": true,
                  "example": 4
                },
                "reverseColor": {
                  "type": "boolean",
                  "required": false,
                  "example": true
                }
              }
            }
          },
          "month": {
            "type": "array",
            "required": true,
            "description": "本月与上月对比",
            "items": {
              "type": "object",
              "fields": {
                "label": {
                  "type": "string",
                  "required": true,
                  "example": "阅读篇数"
                },
                "value": {
                  "type": "string|number",
                  "required": true,
                  "example": 56
                },
                "unit": {
                  "type": "string",
                  "required": true,
                  "example": "篇"
                },
                "change": {
                  "type": "number",
                  "required": true,
                  "example": 33.3
                },
                "prevValue": {
                  "type": "string|number",
                  "required": true,
                  "example": 42
                },
                "diff": {
                  "type": "number",
                  "required": true,
                  "example": 14
                },
                "reverseColor": {
                  "type": "boolean",
                  "required": false,
                  "example": true
                }
              }
            }
          }
        }
      },
      "trainingGoals": {
        "type": "array",
        "required": false,
        "description": "今日训练目标",
        "items": {
          "type": "object",
          "fields": {
            "type": {
              "type": "string",
              "required": true,
              "description": "题型名称",
              "example": "细节理解题"
            },
            "count": {
              "type": "number",
              "required": true,
              "description": "目标数量",
              "example": 2
            },
            "color": {
              "type": "string",
              "required": true,
              "description": "颜色主题",
              "enum": ["blue", "purple", "green", "orange"],
              "example": "blue"
            }
          }
        }
      }
    }
  },
  "studentReport": {
    "description": "完整的学生报告数据结构（包含学生信息和课程记录）",
    "fields": {
      "student": {
        "type": "object",
